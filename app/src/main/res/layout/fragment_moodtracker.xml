<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mood.MoodFragment">

    <TableLayout
        android:id="@+id/mood_layout"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@drawable/header_violazzurro"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_moodlist"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/mood_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/mood_title"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/titlequote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/no_blank_pages"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </TableLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_moodlist"
        style="@style/CardView.style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/addmood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mood_layout">


        <ListView
            android:id="@+id/moodlist"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@color/white" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/addmood"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintVertical_weight="3"
        android:background="@drawable/plus_sign"
        android:backgroundTint="#FF9378C7"
        android:contentDescription="add_mood"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_moodlist" />

</androidx.constraintlayout.widget.ConstraintLayout>
