<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_marginVertical="8dp">

    <TextView
        android:id="@+id/tvTodoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Example"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cbDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/StartDate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTodoTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/editStartDate"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/StartDate_tv"
        app:layout_constraintStart_toEndOf="@+id/StartDate_tv"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTodoTitle" />

    <TextView
        android:id="@+id/FinishDate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_date"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/StartDate_tv"
        app:layout_constraintStart_toEndOf="@+id/editStartDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTodoTitle" />

    <TextView
        android:id="@+id/editFinishDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/FinishDate_tv"
        app:layout_constraintTop_toBottomOf="@+id/tvTodoTitle"
        app:layout_constraintBaseline_toBaselineOf="@id/StartDate_tv"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>