<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:weightSum="14"
    tools:context=".MainActivity">

<androidx.cardview.widget.CardView
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:weightSum="14">

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/happy" />

            <ProgressBar
                android:id="@+id/progbar_happy"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleY="4"/>

            <TextView
                android:id="@+id/happyStats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="15sp" />


        </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/sad" />

        <ProgressBar
            android:id="@+id/progbar_sad"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleY="4"/>


        <TextView
            android:id="@+id/sadStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/flushed" />

        <ProgressBar
            android:id="@+id/progbar_flushed"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleY="4"/>


        <TextView
            android:id="@+id/flushStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/angry" />

        <ProgressBar
            android:id="@+id/progbar_angry"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleY="4"/>


        <TextView
            android:id="@+id/angryStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/depressed" />

        <ProgressBar
            android:id="@+id/progbar_depressed"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleY="4"/>

        <TextView
            android:id="@+id/depressedStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/neutral" />

        <ProgressBar
            android:id="@+id/progbar_neutral"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleY="4"/>


        <TextView
            android:id="@+id/neuStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:srcCompat="@drawable/sleepy" />

        <ProgressBar
            android:id="@+id/progbar_sleepy"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleY="4"/>


        <TextView
            android:id="@+id/sleepyStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="15sp" />
    </TableRow>




</TableLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">


        <!--Linear layout to display pie chart -->
        <!-- and details of pie chart-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--Pie chart to display the data-->

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechartMood"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <!--Creating another linear layout -->
            <!-- to display pie chart details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical">

                    <!--View to display the yellow color icon-->
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/happy"/>

                    <!--Text view to display happy -->
                    <TextView
                        android:id="@+id/tv_happy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="happy"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

                <!--Linear layout to display neutral-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the green color icon-->
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/neutral"/>

                    <!--Text view to display neutral text -->
                    <TextView
                        android:id="@+id/tv_neutral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="neutral"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

                <!--Linear layout to display  depressed-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the purple color icon-->
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/purple_700"/>

                    <!--Text view to display depressed text -->
                    <TextView
                        android:id="@+id/tv_depressed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="depressed"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

                <!--Linear layout to display  angry-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the red color icon-->
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/angry"/>

                    <!--Text view to display angry text -->
                    <TextView
                        android:id="@+id/tv_angry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="angry"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

                <!--Linear layout to display sad-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the blue color icon-->
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/sad"/>

                    <!--Text view to display sad text -->
                    <TextView
                        android:id="@+id/tv_sad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sad"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

                <!--Linear layout to display  flushed-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the yellow color icon-->
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/yellow"/>

                    <!--Text view to display flushed text -->
                    <TextView
                        android:id="@+id/tv_flushed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="flushed"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

                <!--Linear layout to display  sleepy-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the green color icon-->
                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/upArrow"/>

                    <!--Text view to display sleepy text -->
                    <TextView
                        android:id="@+id/tv_sleepy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="sleepy"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>


</TableLayout>


</ScrollView>

