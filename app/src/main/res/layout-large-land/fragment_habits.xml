<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habits.NewHabitActivity">


    <TableLayout
        android:id="@+id/habit_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/header_violazzurro"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_habitlist"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/habit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/habit_tracker"
            android:padding="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/habit_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:text="@string/habit_quote"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="24sp" />


    </TableLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_habitlist"
        style="@style/CardView.style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/new_habit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/habit_layout">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/habitlist"
            android:layout_width="match_parent"
            android:layout_margin="24dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/new_habit"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintVertical_weight="3"
        android:background="@drawable/plus_sign"
        android:backgroundTint="#FF9378C7"
        android:contentDescription="@string/add_habit"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_habitlist" />

</androidx.constraintlayout.widget.ConstraintLayout>



