<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mood.AddMoodActivity">

<TableLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@drawable/sfondo_viola_azzurro"
                android:gravity="bottom"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emoji_layout"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/newmood_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="16dp"
                    android:text="@string/log_new_mood"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/newmood_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:padding="8dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/your_mood_should_not_dictate_your_manners"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="24sp" />


            </TableLayout>

            <LinearLayout
                android:id="@+id/emoji_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toTopOf="@+id/moodcontainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header">

                <TextView
                    android:id="@+id/selectdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/baseline_calendar_month_48"
                    android:drawableTint="#000C5D"
                    android:text="@string/select_date"
                    android:textAlignment="center"
                    android:textColor="#000C5D"
                    android:textSize="36sp" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/moodcontainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="20dp"
                app:layout_constraintBottom_toTopOf="@id/desc_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emoji_layout">

                <ImageButton
                    android:id="@+id/happy"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:foreground="@drawable/happy" />

                <ImageButton
                    android:id="@+id/sad"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:foreground="@drawable/sad" />

                <ImageButton
                    android:id="@+id/neutral"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:foreground="@drawable/neutral" />

                <ImageButton
                    android:id="@+id/depressed"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:foreground="@drawable/depressed" />

                <ImageButton
                    android:id="@+id/angry"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/angry" />

                <ImageButton
                    android:id="@+id/anxious"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/anxious" />

                <ImageButton
                    android:id="@+id/sleepy"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/sleepy" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/desc_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="120dp"
                android:background="@drawable/textview_outline"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/btn_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moodcontainer">

                <EditText
                    android:id="@+id/descbox"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textSize="30dp"
                    android:hint="@string/notes" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desc_layout">

                <Button
                    android:id="@+id/addmood"

                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:enabled="false"
                    android:text="@string/add_this_mood"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

